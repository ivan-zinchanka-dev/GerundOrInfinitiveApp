<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:converters="clr-namespace:GerundOrInfinitive.Presentation.Converters">
    
    <converters:CheckingStatusToBackgroundConverter x:Key="CheckingStatusToBackgroundConverter"
                                                    UncheckedColor="{StaticResource Unchecked}"
                                                    CorrectColor="{StaticResource Correct}"
                                                    IncorrectColor="{StaticResource Incorrect}"
                                                    UncheckedColorDark="{StaticResource UncheckedDark}"
                                                    CorrectColorDark="{StaticResource CorrectDark}"
                                                    IncorrectColorDark="{StaticResource IncorrectDark}"/>
</ResourceDictionary>