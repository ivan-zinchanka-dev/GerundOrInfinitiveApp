<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviours="clr-namespace:GerundOrInfinitive.Presentation.Behaviours"
             x:Class="GerundOrInfinitive.Presentation.Views.MainPage"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             VerticalOptions="Center"
                             Spacing="50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="1"
                       VerticalOptions="Center"
                       Text="Verbs count: "/>
                <Entry Grid.Row="0" Grid.Column="3"
                       VerticalOptions="Center"
                       Text = "5">
                    <Entry.Behaviors>
                        <behaviours:VerbsCountValidationBehaviour 
                            ErrorMessage="{Binding ValidationErrorMessage, Mode=TwoWay}"/>
                    </Entry.Behaviors>
                </Entry>
                <Label Grid.Row="1" Grid.Column="0"  Grid.ColumnSpan="5" 
                       Text="{Binding ValidationErrorMessage, Mode=TwoWay}"
                       TextColor="Red"
                />
            </Grid>
            
            <Button WidthRequest="200"
                    HorizontalOptions="Center"
                    Text="Start testing"
                    Command="{Binding StartTestingCommand}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
