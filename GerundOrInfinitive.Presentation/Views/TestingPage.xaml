<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GerundOrInfinitive.Presentation.Views.TestingPage">
    <Grid>
        <ListView HasUnevenRows="True" ItemsSource="{Binding SourceTasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <FlexLayout Direction="Row" Wrap="Wrap">
                            <Label Text="{Binding BeforeBlankText}" LineBreakMode="WordWrap"/>
                            <Entry WidthRequest="50" Placeholder="_____" />
                            <Label Text="{Binding AfterBlankText}" LineBreakMode="WordWrap"/>
                        </FlexLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    
</ContentPage>