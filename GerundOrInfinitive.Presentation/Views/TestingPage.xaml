<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:ClassModifier="internal"
             x:Class="GerundOrInfinitive.Presentation.Views.TestingPage"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" 
                Stroke="Gray" 
                StrokeThickness="2"
                BackgroundColor="#e1e1e1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Label HorizontalTextAlignment="Center" 
                   VerticalTextAlignment="Center" 
                   Text="{Binding MessageText}" />
        </Border>
        <ListView Grid.Row="1"
                  HasUnevenRows="True" 
                  Margin="10"
                  ItemsSource="{Binding TaskViewModels}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical"
                                     BackgroundColor="{Binding Status, 
                                     Converter={StaticResource CheckingStatusToBackgroundConverter}}">
                            <Label Text="{Binding SourceVerbText}"
                                   TextType="Html"
                                   />
                            <FlexLayout Direction="Row" Wrap="Wrap">
                                <Label Text="{Binding BeforeBlankText}" 
                                       LineBreakMode="WordWrap"
                                       VerticalOptions="Center"
                                />
                                <Entry Text = "{Binding InputBlankText}" 
                                       WidthRequest="70"
                                       VerticalOptions="Center"
                                />
                                <Label Text="{Binding AfterBlankText}" 
                                       LineBreakMode="WordWrap"
                                       VerticalOptions="Center"
                                />
                            </FlexLayout>
                            <StackLayout Orientation="Horizontal"
                                         IsVisible="{Binding IsChecked}">
                                <Label Text="{Binding CorrectAnswer}"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row ="2"
                Text="Submit"
                Command="{Binding SubmitCommand}"
                Margin= "10"
                />
    </Grid>
    
</ContentPage>